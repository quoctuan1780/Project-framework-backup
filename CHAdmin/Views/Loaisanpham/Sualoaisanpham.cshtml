
@{
    ViewBag.Title = "Sualoaisanpham";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.EF.loaisanpham loaisanpham = ViewData["loaisanpham"] as Model.EF.loaisanpham;
    string thongbao = ViewData["thongbao"] as string;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Sửa loại sản phẩm
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-7" style="padding-bottom:120px">
                @if (thongbao != null && thongbao.Equals("ok"))
                {
                    <div class="alert alert-success">Sửa loại sản phẩm thành công</div>
                }
                else if (thongbao != null && thongbao.Equals("error"))
                {
                    <div class="alert alert-danger">Loại sản phẩm đã tồn tại trong hệ thống</div>
                }
                <form action="/Loaisanpham/Sualoaisanpham" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" name="maloaisp" placeholder="Kẹo" value="@loaisanpham.maloaisp" />
                    </div>
                    <div class="form-group">
                        <label>Tên loại sản phẩm</label>
                        <input class="form-control" name="tenloaisp" placeholder="Kẹo" value="@loaisanpham.tenloaisp" required />
                    </div>
                    <button type="submit" class="btn btn-default">Sửa loại sản phẩm</button>
                    <button type="reset" class="btn btn-default">Hủy</button>
                </form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>