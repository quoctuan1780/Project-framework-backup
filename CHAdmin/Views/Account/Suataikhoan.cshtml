
@{
    ViewBag.Title = "Suataikhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string thongbao = ViewData["thongbao"] as string;
    var taikhoan = ViewData["thongtintaikhoan"] as Model.EF.user;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sửa tài khoản</h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-7" style="padding-bottom:120px">
                @if (thongbao != null && thongbao.Equals("ok"))
                {
                    <div class="alert alert-success">Sửa tài khoản thành công</div>
                }
                else if (thongbao != null && thongbao.Equals("error"))
                {
                    <div class="alert alert-danger">Sửa tài khoản không thành công</div>
                }
                <form action="/Account/Suataikhoan" method="post">
                    <input type="text" value="@taikhoan.id" name="id" hidden>
                    <input type="text" value="@taikhoan.ttdn" name="ttdn" hidden>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Email" value="@taikhoan.email" readonly />
                    </div>
                    <div class="form-group">
                        <label>Tên tài khoản</label>
                        <input class="form-control" name="tentk" placeholder="Tên tài khoản" value="@taikhoan.tentk" required />
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input type="hidden" class="form-control" name="password" placeholder="Mật khẩu" value="@taikhoan.password" readonly />
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        <input type="file" name="hinhanh" value="@taikhoan.hinhanh">
                        <input type="text" name="hinhanhcu" value="@taikhoan.hinhanh" hidden />
                    </div>

                    <div class="form-group">
                        <label>Quyền</label>
                        <select name="maquyen" class="form-control">
                            <option value="1" selected>Quản trị viên</option>
                            <option value="3">Thành viên</option>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-default" value="Sửa tài khoản" />
                    <input type="reset" class="btn btn-default" value="Hủy" />
                </form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
