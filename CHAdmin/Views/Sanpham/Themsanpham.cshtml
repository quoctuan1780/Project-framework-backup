@model Model.EF.sanpham

@{
    ViewBag.Title = "Themsanpham";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IQueryable<Model.EF.loaisanpham> loaisp = ViewData["danhsachloaisanpham"] as IQueryable<Model.EF.loaisanpham>;
    string thongbao = ViewData["thongbao"] as string;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Thêm sản phẩm
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-7" style="padding-bottom:120px">
                @if (thongbao != null && thongbao.Equals("ok"))
                {
                    <div class="alert alert-success">Thêm sản phẩm thành công</div>
                }
                @if (thongbao != null && thongbao.Equals("error"))
                {
                    <div class="alert alert-danger">Sản phẩm đã tồn tại trong hệ thống</div>
                }
                @using (Html.BeginForm("Themsanpham", "Sanpham", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                        @Html.TextBoxFor(model => model.tensp, new
                        {
                            @class = "form-control",
                            @placeholder = "Trà matcha",
                            @name = "tensp",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label>Loại sản phẩm</label>
                        @Html.DropDownListFor(model => model.maloaisp,
                            (IEnumerable<SelectListItem>)ViewBag.option, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        @Html.TextAreaFor(model => model.mota, new { @class = "form-control", @rows = "3", @name = "mota" })
                    </div>
                    <div class="form-group">
                        <label>giá</label>
                        @Html.TextBoxFor(model => model.gia, new
                        {
                            @class = "form-control",
                            @type = "number",
                            @name = "gia",
                                @placeholder = "39000",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label>giá khuyến mãi</label>
                        @Html.TextBoxFor(model => model.giakm, new
                        {
                            @class = "form-control",
                            @type = "number",
                            @name = "giakm",
                            @placeholder = "39000",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        @Html.TextBoxFor(model => model.hinhanh, new { @type = "file", @name = "hinhanh" })
                    </div>

                    <div class="form-group">
                        <label>Đơn vị tính</label>
                        @Html.TextBoxFor(model => model.dvt, new
                            { @class = "form-control", @name = "dvt", @placeholder = "Ly", @required = "required" })
                    </div>

                    <button type="submit" class="btn btn-default">Thêm sản phẩm</button>
                    <button type="reset" class="btn btn-default">Hủy</button>
                }
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
